@page "/dataURL"
<SourceCodeLink Repository="Blazor.Canvas" Page="@nameof(DataURL)" />
<h3>Batching</h3>

<img id="blazor_logo" width="100" height="100" style="display:none" src="data:image/png;base64," />

<hr />
<Canvas @ref="canvas" width="400" height="400" style="border: 5px solid red" />
<hr />


<label for="type">Type</label>
<input id="type" type="text" @bind-value="Type" />
<label for="encoderOptions">EncoderOptions</label>
<input id="encoderOptions" type="number" @bind-value="EncoderOptions" />

<button @onclick="ToDataURLAsync">Get canvas content as data url</button>

<h6>Output</h6>
<img width="400" height="400" src="@Output" />
Output is @(Output?.Length ?? 0) bytes

@using Microsoft.JSInterop
@inject IJSRuntime js

@code {
    private string Type { get; set; } = "image/jpeg";
    private double? EncoderOptions { get; set; }
    private string Output { get; set; }
    private async Task ToDataURLAsync()
    {
        Output = await canvas.ToDataURLAsync(Type, EncoderOptions);
        await InvokeAsync(StateHasChanged);
    }
    private Canvas canvas;
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await UpdateCanvasAsync();
        }
        await base.OnAfterRenderAsync(firstRender);
    }
    private async Task UpdateCanvasAsync()
    {
        await using (var ctx = await canvas.GetContext2DAsync(alpha: true))
        {
            await using (var batch = ctx.CreateBatch())
            {
                await ExecuteAsync(batch);
            }
        }
    }
    private async Task ExecuteAsync(Excubo.Blazor.Canvas.Contexts.IContext2DWithoutGetters ctx)
    {
        await ctx.DrawingRectangles.ClearRectAsync(0, 0, 400, 400);
        await ctx.Transformations.ResetTransformAsync();
        await ctx.FillAndStrokeStyles.FillStyleAsync("white");
        await ctx.DrawingRectangles.FillRectAsync(0, 0, 400, 400);
        await ctx.FillAndStrokeStyles.FillStyleAsync("orange");
        await ctx.FillAndStrokeStyles.StrokeStyleAsync("orange");
        await ctx.TextStyles.FontAsync("12px serif");
        await ctx.DrawingText.FillTextAsync("Careful on server-side blazor: data URL payload might be too large", 0, 50);
        await ctx.FillAndStrokeStyles.FillStyleAsync("blazor_logo", Repetition.Repeat);
        await ctx.DrawingRectangles.FillRectAsync(100, 100, 200, 200);
        await ctx.FillAndStrokeStyles.FillStyleAsync(100, 100, 200, 200, (Offset: 0, Color: "green"), (Offset: 1, Color: "blue"));
        await ctx.DrawingRectangles.FillRectAsync(100, 100, 100, 100);
        await ctx.FillAndStrokeStyles.FillStyleAsync(250, 250, 10, 250, 250, 80, (Offset: 0, Color: "green"), (Offset: 0.5, Color: "red"), (Offset: 1, Color: "blue"));
        await ctx.DrawingRectangles.FillRectAsync(200, 200, 100, 100);

    }
}
